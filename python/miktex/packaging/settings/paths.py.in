def get_package_dir(package_id):
    return os.path.normpath(os.path.join(MIKTEX_PACKAGE_ROOT, package_id))


def get_texmf_parent_dir(package_id):
    return os.path.normpath(os.path.join(MIKTEX_PACKAGE_ROOT, package_id, "Files"))


def get_texmf_dir(package_id):
    return os.path.normpath(os.path.join(MIKTEX_PACKAGE_ROOT, package_id, "Files", "texmf"))
